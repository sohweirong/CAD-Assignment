<h1 class="display-4">Report Lost Item Form</h1>
<form action="/" method="post" enctype="multipart/form-data" class="mt-4" autocomplete="off">
    <div class="row">
        <!-- The section for user to upload images -->
        <div class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-6 border-end">
            <div class="form-group">
                <button type="button" class="btn btn-outline-info">Upload Thumbnail</button>
                <button type="button" class="btn btn-outline-dark">Upload Images</button>
                <input type="file" name="uploadThumbnail" id="uploadThumbnail" hidden />
                <input type="file" name="uploadImages" id="uploadImages" hidden />
                
            </div>
        </div>

        <div class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-6 border-start">
            <div class="row mb-3">
                <div class="col-12 col-sm-12 col-md-8 col-lg-8 col-xl-8">
                    <div class="form-group">
                        <label for="lostLocation">Location Found</label>
                        <input type="text" id="lostLocation" placeholder="" name="lostLocation" class="form-control" />
                    </div>
                </div>
                <div class="col-12 col-sm-12 col-md-4 col-lg-4 col-xl-4">
                    <div class="form-group">
                        <label for="lostLocation">Floor</label>
                        <input type="text" id="lostLocation" placeholder="" name="lostLocation" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-6">
                    <div class="form-group">
                        <label for="lostDate">Date Item Is Found</label>
                        <input type="date" id="lostDate" name="lostDate" class="form-control" />
                    </div>
                </div>
                <div class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-6">
                    <div class="form-group">
                        <label for="lostTime">Time Item Is Found</label>
                        <input type="time" id="lostTime" name="lostTime" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="form-group mb-3">
                <label for="itemDescription">Item Description</label>
                <textarea class="form-control" maxlength="3000" placeholder="Detailed description of the item contents" id="itemDescription" name="itemDescription"
                    rows="3"></textarea>
            </div>
            <div class="row mb-3">
                <div class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-6">
                    <div class="form-group">
                        <label for="founderName">Your Name</label>
                        <input type="text" id="founderName" name="founderName" class="form-control" />
                    </div>
                </div>
                <div class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-6">
                    <div class="form-group">
                        <label for="founderEmail">Your Email Address</label>
                        <input type="text" id="founderEmail" name="founderEmail" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="form-group mb-3">
                <label for="founderPhoneNumber">Your Phone Number</label>
                <input type="text" id="founderPhoneNumber" name="founderPhoneNumber" placeholder="+65" class="form-control" />
            </div>
            <div class="form-group mb-3">
                <label for="dropOffLocation">Drop Off Point</label>
                <input type="email" id="dropOffLocation" name="dropOffLocation" placeholder="" class="form-control" />
            </div>
            <div class="row">
                <div class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-6">
                    <div class="form-group">
                        <label for="lostDate">Date Item Is Found</label>
                        <input type="date" id="lostDate" name="lostDate" class="form-control" />
                    </div>
                </div>
                <div class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-6">
                    <div class="form-group">
                        <label for="lostTime">Time Item Is Found</label>
                        <input type="time" id="lostTime" name="lostTime" class="form-control" />
                    </div>
                </div>
            </div>
        </div>

        
    </div>

    <div class="form-group text-end mt-4">
        <button type="reset" class="btn btn-secondary">Reset</button>
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>