<h1 class="display-4">Report Lost Form</h1>
<form action="/" method="post" enctype="multipart/form-data" class="mt-4" autocomplete="off">
    <div class="row">
        <!-- The section for user to upload images -->
        <div class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-6 border-end">
            <div class="form-group">
                <button type="button" class="btn btn-info">Upload Item Image</button>
                <input type="file" name="uploadThumbnail" max="1" id="uploadThumbnail" hidden required />
                <div class="row">

                </div>
            </div>
        </div>

        <div class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-6 border-start">
            {{!-- The section for the location the item is found --}}
            <div class="row mb-3">
                <div class="col-12 col-sm-12 col-md-8 col-lg-8 col-xl-8">
                    <div class="form-group">
                        <label class="form-label" for="lostLocation">Facility</label>
                        <input type="text" id="lostLocation" placeholder="Where in school?" name="lostLocation"
                            class="form-control" required />
                    </div>
                </div>
                <div class="col-12 col-sm-12 col-md-4 col-lg-4 col-xl-4">
                    <div class="form-group">
                        <label class="form-label" for="lostFloor">Floor</label>
                        <input type="number" min="1" max="8" id="lostFloor" placeholder="Which floor?" name="lostFloor"
                            class="form-control" required />
                    </div>
                </div>
            </div>

            {{!-- The section for the date and time item is found --}}
            <div class="row mb-3">
                <div class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-6">
                    <div class="form-group">
                        <label class="form-label" for="lostDate">Date Item Is Found</label>
                        <input type="date" id="lostDate" name="lostDate" class="form-control" value="{{todayDate}}"
                            required />
                    </div>
                </div>
                <div class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-6">
                    <div class="form-group">
                        <label class="form-label" for="lostTime">Time Item Is Found</label>
                        <input type="time" id="lostTime" min="07:00" max="21:00" name="lostTime" class="form-control"
                            value="{{timeNow}}" required />
                    </div>
                </div>
            </div>

            {{!-- The section for the item information --}}
            <div class="form-group mb-3">
                <label class="form-label" for="itemName">Item Found</label>
                <input type="text" id="itemName" placeholder="Wallet, Phone, Bag, Etc" name="itemName"
                    class="form-control" required />
            </div>

            <div class="form-group mb-3">
                <label class="form-label" for="itemDescription">Item Found</label>
                <textarea class="form-control" id="itemDescription" name="itemDescription" placeholder="Maximum of 2000 characters" maxlength="2000" rows="3" required></textarea>
            </div>

            {{!-- The section for founder's particulars --}}
            <div class="row mb-3">
                <div class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-6">
                    <div class="form-group">
                        <label class="form-label" for="founderName">Finder's Name</label>
                        <input type="text" id="founderName" placeholder="Finder's Name" name="founderName"
                            class="form-control" required />
                    </div>
                </div>
                <div class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-6">
                    <div class="form-group">
                        <label class="form-label" for="founderEmail">Finder's Email Address</label>
                        <input type="text" id="founderEmail" placeholder="example@abc.com" name="founderEmail"
                            class="form-control" required />
                    </div>
                </div>
            </div>

            
        </div>


    </div>

    <div class="form-group text-end mt-4">
        <button type="reset" class="btn btn-secondary">Reset</button>
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>