<div class="w-50" style="margin-left:auto; margin-right: auto;">
    <form action="/auth/firstSignIn" method="post">
        <div class="card">
            <div class="card-header">
                <h1 class="display-4">First Sign In</h1>
            </div>
            <div class="card-body my-3">
                <div class="form-group mb-3">
                    <label class="form-label" for="name">Name</label>
                    <input type="text" id="name" placeholder="Your fullname" name="name"
                        class="form-control" required />
                </div>
                <div class="form-group mb-3">
                    <label class="form-label" for="password">Password</label>
                    <input type="password" id="password" placeholder="Your Password" name="password"
                        class="form-control" required />
                </div>
                <div class="form-group">
                    <label class="form-label" for="cfmpassword">Confirm Password</label>
                    <input type="password" id="cfmpassword" placeholder="Confirm Your Password" name="cfmpassword"
                        class="form-control" required />
                </div>
            </div>
            <div class="card-footer text-end">
                <button type="submit" class="btn btn-primary">Confirm</button>
            </div>
        </div>
    </form>
</div>
